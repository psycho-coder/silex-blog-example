<!doctype html>
<html lang="{{ app.locale }}">
<head>
    {% block meta %}
        <meta charset="UTF-8">
    {% endblock %}

    <title>
        {% block title %}
            {{ 'views.layout.page_title'|trans }}
        {% endblock %}
    </title>

    <link rel="stylesheet" href="{{ app.request.basepath }}/css/bootstrap.min.css" />
    <link rel="stylesheet" href="{{ app.request.basepath }}/css/app.min.css" />

    <link rel="stylesheet" href="http://yandex.st/highlightjs/8.0/styles/default.min.css" />
</head>
<body>

    {% if current_page is not defined %}
        {% set current_page = 'unknown' %}
    {% endif %}

    <div class="wrapper">
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <nav>
                    <ul class="nav navbar-nav">
                        <li class="{% if current_page == 'homepage' %}active{% endif %}">
                            <a href="{{ path('homepage') }}">{{ 'views.layout._menu.home'|trans }}</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    
        <div class="container">
            {% block header %}{% endblock %} 
            {% block content %}{% endblock %}
        </div><!-- /.container -->
    </div>

    <footer>
        <div class="container">
            {{ 'views.layout.powered_by'|trans }}
            <ul class="links">
                <li><a href="http://getbootstrap.com">Bootstrap</a></li>
                <li><a href="http://silex.sensiolabs.org/">Silex</a></li>
            </ul>
        </div>
    </footer>

    <script src="{{ app.request.basepath }}/js/app.min.js"></script>
    <script src="http://yandex.st/highlightjs/8.0/highlight.min.js"></script>
    <script>$().ready(function(){ hljs.initHighlightingOnLoad(); });</script>
</body>
</html>